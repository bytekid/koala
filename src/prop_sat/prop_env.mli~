open Prop_var

(*----- clauses ----*)

type clause
val clause_get_lits : clause -> lit list

val clause_to_string : clause -> string
val clause_list_to_string : clause list -> string

module CKey :
  sig
    type t = clause
    val compare : t -> t -> int
  end

module CMap : Map.S with type key = clause
module CSet : Set.S with type elt = clause


(*--- model ---*)
type model
